#! /bin/sh

realpath=$(readlink -fn "$0")

prefix_path_components() {
	local _prefix=$1
	local components=$2
	local mangledpath=""

	local oldifs=$IFS
	IFS=:
	for component in "$components"; do
		if [ -n "$mangledpath" ]; then
			mangledpath="${mangledpath}:"
		fi
		mangledpath="$mangledpath$_prefix$component"
	done
	IFS=$oldifs

	echo "$mangledpath"
}

PKG_CONFIG_PATH=$(prefix_path_components "$(dirname "$realpath")/@bindir_to_prefix@/" "@REL_PATH_NATIVE@")
PKG_CONFIG_LIBDIR=$(dirname "$relpath")/@bindir_to_prefix@/@REL_LIBDIR_NATIVE@
unset PKG_CONFIG_SYSROOT_DIR

pkg-config "$@"
